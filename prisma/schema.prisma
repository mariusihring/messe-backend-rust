generator client {
  provider = "cargo prisma"
  output   = "../src/routes/prisma.rs"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:secure_password@127.0.0.1:4832/messe"
}

model Admin {
  id       Int @id @default(autoincrement())
  username     String
  email    String @unique
  password String
  auth_token String
}

model CompanyData {
  userID       Int     @unique
  isAssociated Boolean
  companyName  String
  companyEmail String
  UserData     User    @relation(fields: [userID], references: [id])
}

model Interests {
  userID         Int     @unique
  webDevelopment Boolean
  cyberSecurity  Boolean
  mobileDev      Boolean
  design         Boolean
  dataScience    Boolean
  coding         Boolean
  UserData       User    @relation(fields: [userID], references: [id])
}

model User {
  id          Int          @id @default(autoincrement())
  lastName    String
  firstName   String
  mail        String       @unique
  picture     String       @db.LongText
  createdAt   DateTime     @default(now())
  CompanyData CompanyData?
  Interests   Interests?
}

model Subscriber {
  id  Int @id @default(autoincrement())
  adress  String
}
