generator client {
  provider = "cargo prisma"
  output   = "../src/prisma.rs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       String @id
  name     String
  email    String @unique
  password String
}

model CompanyData {
  userID       Int     @unique
  isAssociated Boolean
  companyName  String
  companyEmail String
  UserData     User    @relation(fields: [userID], references: [id])
}

model Interests {
  userID         Int     @unique
  webDevelopment Boolean
  cyberSecurity  Boolean
  mobileDev      Boolean
  design         Boolean
  dataScience    Boolean
  coding         Boolean
  UserData       User    @relation(fields: [userID], references: [id])
}

model User {
  id          Int          @id @default(autoincrement())
  lastName    String
  firstName   String
  mail        String       @unique
  picture     String       @db.LongText
  createdAt   DateTime     @default(now())
  CompanyData CompanyData?
  Interests   Interests?
}
