generator client {
  provider = "cargo prisma"
  output   = "../src/bin/prisma.rs"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:secure_password@127.0.0.1:4832/messe"
}

model Admin {
  id       String @id
  name     String
  email    String @unique
  password String
}

model CompanyData {
  userID       Int      @unique
  isAssociated Boolean
  companyName  String
  companyEmail String
  UserData     UserData @relation(fields: [userID], references: [id])
}

model Interests {
  userID         Int      @unique
  webDevelopment Boolean
  cyberSecurity  Boolean
  mobileDev      Boolean
  design         Boolean
  dataScience    Boolean
  coding         Boolean
  UserData       UserData @relation(fields: [userID], references: [id])
}

model UserData {
  id          Int          @id @default(autoincrement())
  lastName    String
  firstName   String
  mail        String       @unique
  picture     String       @db.LongText
  createdAt   DateTime     @default(now())
  CompanyData CompanyData?
  Interests   Interests?
}
